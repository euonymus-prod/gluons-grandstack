{
  "name": "gluons",
  "version": "0.0.1",
  "description": "API app for GRANDstack",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "babel src -d build; cp .env build; cp -rp src/schemas build",
    "now-build": "babel src -d build; cp .env build; cp -rp src/schemas build",
    "start": "npm run build && node build/index.js",
    "seedDb": "./node_modules/.bin/babel-node src/seed/seed-db.js"
  },
  "author": "euonymus",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.16.1",
    "atob": "^2.1.2",
    "dotenv": "^8.2.0",
    "firebase-admin": "^9.0.0",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^5.0.0",
    "minimist": "^1.2.5",
    "moment": "^2.27.0",
    "neo4j-driver": "^4.1.1",
    "neo4j-graphql-js": "^2.15.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-stage-2": "^7.8.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euonymus-prod/gluons-grandstack.git"
  }
}
